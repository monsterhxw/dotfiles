{
  "alwaysThinkingEnabled": true,
  "attribution": {
    "commit": "",
    "pr": ""
  },
  "cleanupPeriodDays": 60,
  "env": {
    "ANTHROPIC_AUTH_TOKEN": "",
    "ANTHROPIC_BASE_URL": "",
    "CLAUDE_CODE_ATTRIBUTION_HEADER": "0",
    "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "1",
    "CLAUDE_CODE_DISABLE_TERMINAL_TITLE": "1"
  },
  "model": "opus",
  "permissions": {
    "defaultMode": "plan",
    "deny": [
      "Read(~/.ssh/**)",
      "Read(~/.env)",
      "Read(./.env*)",
      "Read(/**/.env*)"
    ]
  },
  "statusLine": {
    "command": "$HOME/.claude/ccline/ccline",
    "padding": 0,
    "type": "command"
  }
}
